{
    "files.exclude": {
        "**/.venv": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.idea": true,
        "**/.ruff_cache": true
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        ".gitignore": ".gitattributes",
        "pyproject.toml": "uv.lock",
        ".pre-commit-config.yaml": ".env, .checkmake.ini, .mdlrc.style.rb, .mdlrc",
    },
    "cSpell.words": [
        "Ahmadi",
        "arithmatex",
        "Ehsan",
        "glightbox",
        "mathjax",
        "pymdownx"
    ]
}
